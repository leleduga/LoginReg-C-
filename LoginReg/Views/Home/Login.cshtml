@{
    ViewData["Title"] = "Login";
}
<h2 class="m-4">Login</h2> 
    @model LoginReg.Models.RestViewModel
<form asp-action="Login" asp-controller="Home" method="post">
    
        <div class="form-group">
            <div class="row">
            <label for="EmailToCheck">Email:</label>
            <!-- <span validation-for="LogEmail"></span> -->
            <input type="text" class="form-control" for="EmailToCheck" placeholder="Email">
            </div>
        </div>
        <div class="form-group">
            <div class="row">
            <label for="PasswordToCheck">Password:</label>
            <!-- <span asp-validation-for="PasswordToCheck"></span> -->
            <input type="password" class="form-control" for="PasswordToCheck" placeholder="Password">
            </div>
        </div>
    <button type="submit" class="btn btn-default">Login</button>
</form>

    <div class="login-errors">
    <h4>@ViewBag.Message</h4>
    </div>


